<Window x:Class="Udemy.Spock.ParallelProgramming.MultiThreading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Udemy.Spock.ParallelProgramming.MultiThreading"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
      
        <StackPanel Margin="24">
            <StackPanel Margin="5" VerticalAlignment="Center" Grid.Row="1"  Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Height="20" HorizontalAlignment="Center" >Book Name:</TextBlock>
                <TextBlock x:Name="BookTitle" HorizontalAlignment="Center"  />
            </StackPanel>
            <Button Margin="6" Width="80" Height="30" x:Name="FindBook" Click="FindBook_Click">Find Book</Button>
        </StackPanel>
    </Grid>
</Window>
